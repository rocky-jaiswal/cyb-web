{{> sidebar}}
<div class="span6">
  <div class="right-content">
    <h3>My Saved Blessings</h3>
    <table class="table table-bordered table-hover table-condensed listing">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Date</th>
          <th>Shared?</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        {{#each collection}}
          <tr>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.date}}</td>
            <td>{{#if this.shared}}Yes{{else}}No{{/if}}</td>
            <td><a href="/#edit/{{this._id}}">Edit</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>