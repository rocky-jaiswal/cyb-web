{{> sidebar}}
<div class="span6">
  <div class="right-content">
    <h3>Save a Blessing</h3>
    {{#if message}}
      <div class="alert notwide">{{message}}</div>
    {{/if}}
    <div class="add">
      <form action="http://localhost:3000/blessings" method="POST" id="add-form">
        <input type="text" placeholder="Title" name="blessing[title]">
        <textarea placeholder="Description" name="blessing[description]"/>
        <input type="date" placeholder="Date" name="blessing[date]">
        <select name="blessing[shared]">
          <option value="false" selected>Do not share</option> 
          <option value="true">Share</option>
        </select>
        <br/>
        <input type="submit" value="Save" class="btn-app">
      </form>
    </div>
  </div>
</div>